#include <cs50.h>
#include <stdio.h>
#include <crypt.h>
#include <string.h>
#include <unistd.h>

int main(int argc, string argv[])
{

    if (argc != 2){
        printf("Error.\n");
        return 1;
    }
    
    char salt[2] = {argv[1][0], argv[1][1]};
    string password = crypt(argv[1], salt);;
    do{
        password = crypt(password, salt);
        printf("%s\n", password);
        sleep(1);
    }while( (int)(strlen(password))>5);
    
    printf("%s\n", password);
    return 0;
    
}
