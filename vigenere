#include <cs50.h>
#include <stdio.h>
#include <string.h>
#include <ctype.h>
#include <stdlib.h>

int shift(char c);
void v_cipher(int keynum, string plaintext);

int main(int argc, string argv[])
{

    if (argc != 2){
        printf("Usage: ./vigenere keyword\n");
        return 1;
    }
    else{
        for (int i=0; i<strlen(argv[1]); i++){
            if (isalpha(argv[1][i])==0){
                printf("Usage: ./vigenere keyword\n");
                return 1;
            }
        }
    }
    int key = shift(argv[1][0]);

    string plaintext = get_string("plaintext:   ");
    v_cipher(key, plaintext);
}

int shift(char c){
    c = toupper(c);
    int keyshift = c - 65;
    return keyshift;
}

void v_cipher(int key, string plaintext){
    
    for (int i=0; i < strlen(plaintext); i++){
        if (isupper(plaintext[i])){
            if (plaintext[i] + (key % 26) > 90){                    //if higher than 'Z', loop down
                plaintext[i] = plaintext[i] - 26;
            }
            plaintext[i] = plaintext[i] + (key % 26);
        }
        else if (islower(plaintext[i])){
            if (plaintext[i] + (key % 26) > 122){                    //if higher than 'z', loop down
                plaintext[i] = plaintext[i] - 26;
            }
            plaintext[i] = plaintext[i] + (key % 26);
        }
    }
    printf("ciphertext:  %s\n", plaintext);
}
